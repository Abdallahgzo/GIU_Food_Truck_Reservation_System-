<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Menu Items - GIU Food Truck</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/src/menuItems.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-custom">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/ownerDashboard">GIU Food Truck</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/ownerDashboard">Dashboard</a></li>
          <li class="active"><a href="/menuItems">Manage Menu</a></li>
          <li><a href="/addMenuItem">Add Menu Item</a></li>
          <li><a href="/truckOrders">View Orders</a></li>
          <li><a href="#" id="logoutBtn">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="text-center mb-3">
        <h1>Manage Menu Items</h1>
        <p>View, edit, and manage your menu items</p>
      </div>

      <div id="alertContainer"></div>

      <div class="card mb-3">
        <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
          <span>Menu Items</span>
          <a href="/addMenuItem" class="btn-primary" style="text-decoration: none; padding: 8px 16px;">
            Add New Item
          </a>
        </div>
        <div class="card-body">
          <div id="menuItemsTable" style="overflow-x: auto;">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="menuItemsBody">
                <!-- Menu items will be loaded here -->
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <h3>No Menu Items</h3>
        <p>You haven't added any menu items yet. Start by adding your first item!</p>
        <a href="/addMenuItem" class="btn-primary" style="display: inline-block; margin-top: 15px; text-decoration: none;">
          Add Menu Item
        </a>
      </div>
    </div>

    <!-- View Details Modal -->
    <div id="viewDetailsModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: #F4EAE0; border: 2px solid #000000;">
          <div class="modal-header" style="border-bottom: 1px solid #000000;">
            <h4 class="modal-title">Menu Item Details</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="viewDetailsContent">
            <!-- Details will be loaded here -->
          </div>
          <div class="modal-footer" style="border-top: 1px solid #000000;">
            <button type="button" class="btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: #F4EAE0; border: 2px solid #000000;">
          <div class="modal-header" style="border-bottom: 1px solid #000000;">
            <h4 class="modal-title">Edit Menu Item</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="editForm">
              <div class="form-group">
                <label for="editName" class="form-label">Name *</label>
                <input type="text" class="form-control" id="editName" required>
              </div>
              <div class="form-group">
                <label for="editCategory" class="form-label">Category *</label>
                <input type="text" class="form-control" id="editCategory" required>
              </div>
              <div class="form-group">
                <label for="editDescription" class="form-label">Description</label>
                <textarea class="form-control" id="editDescription" rows="3"></textarea>
              </div>
              <div class="form-group">
                <label for="editPrice" class="form-label">Price *</label>
                <input type="number" step="0.01" min="0.01" class="form-control" id="editPrice" required>
              </div>
              <div class="form-group">
                <label for="editStatus" class="form-label">Status</label>
                <select class="form-control" id="editStatus">
                  <option value="available">Available</option>
                  <option value="unavailable">Unavailable</option>
                </select>
              </div>
              <input type="hidden" id="editItemId">
            </form>
          </div>
          <div class="modal-footer" style="border-top: 1px solid #000000;">
            <button type="button" class="btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn-primary" id="saveEditBtn">Save Changes</button>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Logout functionality
      $(document).ready(function() {
        $('#logoutBtn').click(function(e) {
          e.preventDefault();
          document.cookie = 'session_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
          location.href = '/';
        });
      });
    </script>
  </body>
</html>

