<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Browse Trucks - GIU Food Truck</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/src/trucks.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-custom">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard">GIU Food Truck</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/dashboard">Dashboard</a></li>
          <li class="active"><a href="/trucks">Browse Trucks</a></li>
          <li><a href="/cart">Cart</a></li>
          <li><a href="/myOrders">My Orders</a></li>
          <li><a href="#" id="logoutBtn">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="text-center mb-3">
        <h1>Browse Food Trucks</h1>
        <p>Select a truck to view its menu</p>
      </div>

      <div id="alertContainer"></div>

      <div id="trucksContainer" class="grid-container">
        <!-- Trucks will be loaded here -->
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <h3>No Trucks Available</h3>
        <p>There are currently no available food trucks. Please check back later.</p>
        <a href="/dashboard" class="btn-primary" style="display: inline-block; margin-top: 15px;">Back to Dashboard</a>
      </div>
    </div>

    <script>
      // Logout functionality
      $(document).ready(function() {
        $('#logoutBtn').click(function(e) {
          e.preventDefault();
          document.cookie = 'session_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
          location.href = '/';
        });
      });
    </script>
  </body>
</html>

