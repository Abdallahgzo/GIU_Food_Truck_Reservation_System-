<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Menu Item - GIU Food Truck</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/src/addMenuItem.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-custom">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/ownerDashboard">GIU Food Truck</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/ownerDashboard">Dashboard</a></li>
          <li><a href="/menuItems">Manage Menu</a></li>
          <li class="active"><a href="/addMenuItem">Add Menu Item</a></li>
          <li><a href="/truckOrders">View Orders</a></li>
          <li><a href="#" id="logoutBtn">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="text-center mb-3">
        <h1>Add Menu Item</h1>
        <p>Add a new item to your menu</p>
      </div>

      <div id="alertContainer"></div>

      <div class="card" style="max-width: 700px; margin: 0 auto;">
        <div class="card-header">Menu Item Information</div>
        <div class="card-body">
          <form id="addMenuItemForm">
            <div class="form-group">
              <label for="name" class="form-label">Name *</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter item name" required>
            </div>
            
            <div class="form-group">
              <label for="category" class="form-label">Category *</label>
              <input type="text" class="form-control" id="category" name="category" placeholder="e.g., Appetizer, Main Course, Dessert, Beverage" required>
            </div>
            
            <div class="form-group">
              <label for="description" class="form-label">Description</label>
              <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter item description (optional)"></textarea>
            </div>
            
            <div class="form-group">
              <label for="price" class="form-label">Price *</label>
              <input type="number" step="0.01" min="0.01" class="form-control" id="price" name="price" placeholder="0.00" required>
              <small style="color: #000000; display: block; margin-top: 5px;">Price must be greater than 0</small>
            </div>
            
            <div class="form-group text-center" style="margin-top: 30px;">
              <button type="button" id="submitBtn" class="btn-primary" style="padding: 12px 40px; font-size: 18px; margin-right: 10px;">
                Add Item
              </button>
              <a href="/menuItems" class="btn-secondary" style="text-decoration: none; padding: 12px 40px; font-size: 18px; display: inline-block;">
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      // Logout functionality
      $(document).ready(function() {
        $('#logoutBtn').click(function(e) {
          e.preventDefault();
          document.cookie = 'session_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
          location.href = '/';
        });
      });
    </script>
  </body>
</html>

