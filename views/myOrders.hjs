<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - GIU Food Truck</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/src/myOrders.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-custom">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard">GIU Food Truck</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/trucks">Browse Trucks</a></li>
          <li><a href="/cart">Cart</a></li>
          <li class="active"><a href="/myOrders">My Orders</a></li>
          <li><a href="#" id="logoutBtn">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="text-center mb-3">
        <h1>My Orders</h1>
        <p>View your order history and track your orders</p>
      </div>

      <div id="alertContainer"></div>

      <div id="ordersContainer">
        <div class="card">
          <div class="card-header">Order History</div>
          <div class="card-body">
            <div id="ordersTable" style="overflow-x: auto;">
              <table class="table">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th>Truck Name</th>
                    <th>Status</th>
                    <th>Total Price</th>
                    <th>Order Date</th>
                    <th>Pickup Time</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody id="ordersBody">
                  <!-- Orders will be loaded here -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <h3>No Orders Yet</h3>
        <p>You haven't placed any orders yet. Start browsing trucks to place your first order!</p>
        <a href="/trucks" class="btn-primary" style="display: inline-block; margin-top: 15px; text-decoration: none;">
          Browse Trucks
        </a>
      </div>
    </div>

    <!-- Order Details Modal -->
    <div id="orderDetailsModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="background-color: #F4EAE0; border: 2px solid #000000;">
          <div class="modal-header" style="border-bottom: 1px solid #000000;">
            <h4 class="modal-title">Order Details</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="orderDetailsContent">
            <!-- Order details will be loaded here -->
          </div>
          <div class="modal-footer" style="border-top: 1px solid #000000;">
            <button type="button" class="btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Logout functionality
      $(document).ready(function() {
        $('#logoutBtn').click(function(e) {
          e.preventDefault();
          document.cookie = 'session_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
          location.href = '/';
        });
      });
    </script>
  </body>
</html>

