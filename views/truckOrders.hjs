<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Truck Orders - GIU Food Truck</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/src/truckOrders.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-custom">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/ownerDashboard">GIU Food Truck</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/ownerDashboard">Dashboard</a></li>
          <li><a href="/menuItems">Manage Menu</a></li>
          <li><a href="/addMenuItem">Add Menu Item</a></li>
          <li class="active"><a href="/truckOrders">View Orders</a></li>
          <li><a href="#" id="logoutBtn">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="text-center mb-3">
        <h1>Truck Orders</h1>
        <p>Manage and track all orders for your truck</p>
      </div>

      <div id="alertContainer"></div>

      <div class="card mb-3">
        <div class="card-header">Filter Orders</div>
        <div class="card-body">
          <div id="filterTabs" style="display: flex; flex-wrap: wrap; gap: 10px; justify-content: center;">
            <button class="btn-secondary filter-tab active" data-status="all">All</button>
            <button class="btn-secondary filter-tab" data-status="pending">Pending</button>
            <button class="btn-secondary filter-tab" data-status="preparing">Preparing</button>
            <button class="btn-secondary filter-tab" data-status="ready">Ready</button>
            <button class="btn-secondary filter-tab" data-status="completed">Completed</button>
            <button class="btn-secondary filter-tab" data-status="cancelled">Cancelled</button>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">Orders</div>
        <div class="card-body">
          <div id="ordersTable" style="overflow-x: auto;">
            <table class="table">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Customer Name</th>
                  <th>Status</th>
                  <th>Total</th>
                  <th>Pickup Time</th>
                  <th>Order Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="ordersBody">
                <!-- Orders will be loaded here -->
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <h3>No Orders</h3>
        <p>You don't have any orders yet.</p>
      </div>
    </div>

    <!-- Order Details Modal -->
    <div id="orderDetailsModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="background-color: #F4EAE0; border: 2px solid #000000;">
          <div class="modal-header" style="border-bottom: 1px solid #000000;">
            <h4 class="modal-title">Order Details</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="orderDetailsContent">
            <!-- Order details will be loaded here -->
          </div>
          <div class="modal-footer" style="border-top: 1px solid #000000;">
            <button type="button" class="btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Update Modal -->
    <div id="statusUpdateModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: #F4EAE0; border: 2px solid #000000;">
          <div class="modal-header" style="border-bottom: 1px solid #000000;">
            <h4 class="modal-title">Update Order Status</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="statusUpdateForm">
              <div class="form-group">
                <label for="statusSelect" class="form-label">New Status *</label>
                <select class="form-control" id="statusSelect" required>
                  <option value="pending">Pending</option>
                  <option value="preparing">Preparing</option>
                  <option value="ready">Ready</option>
                  <option value="completed">Completed</option>
                  <option value="cancelled">Cancelled</option>
                </select>
              </div>
              <div class="form-group">
                <label for="estimatedPickup" class="form-label">Estimated Earliest Pickup (Optional)</label>
                <input type="datetime-local" class="form-control" id="estimatedPickup">
                <small style="color: #000000; display: block; margin-top: 5px;">Leave empty to keep current estimated pickup time</small>
              </div>
              <input type="hidden" id="statusUpdateOrderId">
            </form>
          </div>
          <div class="modal-footer" style="border-top: 1px solid #000000;">
            <button type="button" class="btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn-primary" id="updateStatusBtn">Update Status</button>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Logout functionality
      $(document).ready(function() {
        $('#logoutBtn').click(function(e) {
          e.preventDefault();
          document.cookie = 'session_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
          location.href = '/';
        });
      });
    </script>
  </body>
</html>

