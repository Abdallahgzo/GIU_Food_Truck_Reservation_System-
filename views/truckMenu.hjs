<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Truck Menu - GIU Food Truck</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/src/truckMenu.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-custom">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard">GIU Food Truck</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/trucks">Browse Trucks</a></li>
          <li><a href="/cart">Cart</a></li>
          <li><a href="/myOrders">My Orders</a></li>
          <li><a href="#" id="logoutBtn">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="text-center mb-3">
        <h1 id="truckName">Truck Menu</h1>
        <p>Select items to add to your cart</p>
      </div>

      <div id="alertContainer"></div>

      <div class="card mb-3">
        <div class="card-header">Filter by Category</div>
        <div class="card-body">
          <div id="categoryFilters" style="display: flex; flex-wrap: wrap; gap: 10px; justify-content: center;">
            <button class="btn-secondary category-filter active" data-category="all">All Items</button>
            <!-- Category buttons will be loaded here -->
          </div>
        </div>
      </div>

      <div id="menuItemsContainer" class="grid-container">
        <!-- Menu items will be loaded here -->
      </div>

      <div id="emptyState" class="empty-state" style="display: none;">
        <h3>No Menu Items Available</h3>
        <p>This truck currently has no available menu items.</p>
        <a href="/trucks" class="btn-primary" style="display: inline-block; margin-top: 15px;">Back to Trucks</a>
      </div>
    </div>

    <script>
      // Logout functionality
      $(document).ready(function() {
        $('#logoutBtn').click(function(e) {
          e.preventDefault();
          document.cookie = 'session_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
          location.href = '/';
        });
      });
    </script>
  </body>
</html>

